@page
@model AspNetCore.OrderListModel
@{
    ViewData["Title"] = "OrderList";
}
@{ 
    var status = HttpContext.Request.Query["data"];
    var cancelled = "text-primary";
    var completed = "text-primary";
    var inprocess = "text-primary";

    if(status =="cancelled")
    {
        cancelled = "active text-white";
    }
    else
    {
        if(status =="completed")
        {
            completed = "active text-white";
        }
        else
        {
            inprocess = "active text-white";
        }
    }
}

<div class="border backgroundWhite container">
    <div class="d-flex justify-content-between mb-3" >
        <div class="p-2">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-page="OrderList" asp-route-data="cancelled">
                    <li class="list-group-item @cancelled">Cancelled</li>
                </a>

                <a style="text-decoration:none" asp-page="OrderList" asp-route-data="completed">
                    <li class="list-group-item @completed ">Completed</li>
                </a>
                <a style="text-decoration:none" asp-page="OrderList" asp-route-data="inprocess">
                    <li class="list-group-item @inprocess">Inprocess</li>
                </a>

            </ul>
        </div>
    </div>
    <br />
    <br />
    <br />

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
{
    <script src="~/js/orderList.js"></script>

}
